@using BeeEngineering.Domain.Dto;
@model CandidateDto
@{
    ViewData["Title"] = "Update Candidate's Page";
}


<div class="card text-xl-start mt-5 align-middle">
  <div class="card-header text-center">
      <h1 class="display-4 candidates">Update</h1>
  </div>

  <div class="card-body">
    <form asp-controller="Candidates" asp-action="Update" method="post">
  <div class="mb-3">
    <label for="inputName">Name</label>
    <input type="text" asp-for="Name" class="form-control" id="name" placeholder="Type your name here...">
    @Html.ValidationMessageFor(x => x.Name)
  </div>

  <div class="mb-3">
    <label for="inputSurname">Sobrenome</label>
    <input type="text" asp-for="Surname" class="form-control" id="surname" placeholder="Surname here...">
    @Html.ValidationMessageFor(x => x.Surname)
  </div>

  <div class="mb-3">
    <label for="inputCountry">Country</label>
    <input type="text" asp-for="Country" class="form-control" id="country" placeholder="Which Country?">
    @Html.ValidationMessageFor(x => x.Country)
  </div>

  <div class="text-center">
      <button type="submit" class="btn btn-outline-primary">Update</button>
      <a class="btn btn-outline-secondary" asp-controller="Candidates" asp-action="Index">Back</a>
  </div>
</form>
  </div>
</div>

