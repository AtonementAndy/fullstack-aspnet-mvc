@{
    ViewData["Title"] = "Delete Candidate's Page";
}

<div class="text-center mt-5">
    <h3>Are you sure?</h3>
</div>

<div class="text-center mt-3">
    <h5>@Model.Name</h5>
</div>

<div class="text-center mt-3">
    <h6>Surname: @Model.Surname</h6>
</div>

<div class="text-center mt-3">
    <h6>Country: @Model.Country</h6>
</div>

<div class="d-flex justify-content-center mt-3">
    <form asp-action="DeleteConfirmed" method="post" class="me-2">
        @Html.AntiForgeryToken()
        <input type="hidden" name="Id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Confirm</button>
    </form>
    <a class="btn btn-secondary" asp-controller="Candidates" asp-action="Index">Cancel</a>
</div>
