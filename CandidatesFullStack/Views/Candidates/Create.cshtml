@using BeeEngineering.Domain.Dto;
@model CandidateDto

@{
    ViewData["Title"] = "Add New Candidate Page";
}

<div class="card text-xl-start mt-5 align-middle">
    <div class="card-header text-center">
        <h1 class="display-4 candidates">Add New Candidate</h1>
    </div>

    <div class="card-body">
        <form asp-controller="Candidates" asp-action="Create" method="post">
            <div class="mb-3">
                <label for="inputName">Name</label>
                <input type="text" asp-for="Name" class="form-control col-xs-4" id="name" placeholder="Your name here...">
                @Html.ValidationMessageFor(x => x.Name)
            </div>

            <div class="mb-3">
                <label for="inputSurname">Surname</label>
                <input type="text" asp-for="Surname" class="form-control col-xs-4" id="surname" placeholder="Surname here...">
                @Html.ValidationMessageFor(x => x.Surname)
            </div>

            <div class="mb-3">
                <label for="inputCountry">Country</label>
                <input type="text" asp-for="Country" class="form-control col-xs-4" id="country" placeholder="Which country do you live?">
                @Html.ValidationMessageFor(x => x.Country)
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-outline-primary submit">Save</button>
                <a class="btn btn-outline-secondary" asp-controller="Candidates" asp-action="Index">Back</a>
            </div>

        </form>
    </div>
</div>

